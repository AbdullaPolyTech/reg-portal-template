<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title || "Reg Portal" %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="topbar">
      <div class="brand">Reg Portal</div>
      <div class="spacer"></div>
      <% if (currentUser) { %>
        <div class="user">
          <span><%= currentUser.full_name %> (<%= currentUser.role %>)</span>
          <form action="/logout" method="post" style="display:inline;">
            <button class="linkbtn" type="submit">Logout</button>
          </form>
        </div>
      <% } %>
    </header>

    <main class="container">
      <%- body %>
    </main>
  </body>
</html>
