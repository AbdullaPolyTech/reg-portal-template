<%- include("../partials/header", { title: "Admin - Applications" }) %>
<%- include("../partials/alerts") %>

<% const statusClasses = { APPROVED: "success", REJECTED: "danger", PENDING: "warning" }; %>
<% const paginationSuffix = pagination && pagination.queryString ? `&${pagination.queryString}` : ""; %>
<h1 class="mb-3">All applications</h1>

<div class="card shadow-sm">
  <div class="card-body border-bottom">
    <form class="row g-2 align-items-end" method="get" action="/admin/applications">
      <div class="col-12 col-md-4">
        <label class="form-label" for="application-search">Search</label>
        <input
          class="form-control"
          id="application-search"
          type="search"
          name="search"
          value="<%= (filters && filters.search) || "" %>"
          placeholder="Search by name, email, or organization"
        />
      </div>
      <div class="col-6 col-md-3">
        <label class="form-label" for="application-status">Status</label>
        <select class="form-select" id="application-status" name="status">
          <option value="ALL" <%= (filters && filters.status) === "ALL" ? "selected" : "" %>>All statuses</option>
          <option value="PENDING" <%= (filters && filters.status) === "PENDING" ? "selected" : "" %>>Pending</option>
          <option value="APPROVED" <%= (filters && filters.status) === "APPROVED" ? "selected" : "" %>>Approved</option>
          <option value="REJECTED" <%= (filters && filters.status) === "REJECTED" ? "selected" : "" %>>Rejected</option>
        </select>
      </div>
      <div class="col-6 col-md-3">
        <label class="form-label" for="application-sort">Sort</label>
        <select class="form-select" id="application-sort" name="sort">
          <option value="latest" <%= (filters && filters.sort) === "latest" ? "selected" : "" %>>Latest</option>
          <option value="oldest" <%= (filters && filters.sort) === "oldest" ? "selected" : "" %>>Oldest</option>
          <option value="name" <%= (filters && filters.sort) === "name" ? "selected" : "" %>>Name A â†’ Z</option>
          <option value="status" <%= (filters && filters.sort) === "status" ? "selected" : "" %>>Status</option>
        </select>
      </div>
      <div class="col-12 col-md-2 d-flex gap-2">
        <button class="btn btn-primary w-100" type="submit">Apply</button>
        <a class="btn btn-outline-secondary w-100" href="/admin/applications">Reset</a>
      </div>
    </form>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">User</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Created</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
        <tbody>
		  <% if ((applications || []).length === 0) { %>
            <tr>
              <td class="text-center text-secondary py-4" colspan="6">
                No applications match the selected filters.
              </td>
            </tr>
          <% } %>
          <% applications.forEach(a => { %>
            <tr>
              <td class="fw-semibold"><%= a.id %></td>
              <td><%= a.full_name %></td>
              <td><%= a.email %></td>
              <td>
                <span class="badge text-bg-<%= statusClasses[a.status] || "secondary" %>">
                  <%= a.status %>
                </span>
              </td>
              <td class="text-nowrap"><%= a.created_at %></td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/admin/applications/<%= a.id %>">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if (pagination && pagination.totalPages > 1) { %>
  <nav class="mt-4" aria-label="Applications pagination">
    <ul class="pagination justify-content-center mb-0">
      <li class="page-item <%= pagination.currentPage === 1 ? "disabled" : "" %>">
        <a
          class="page-link"
          href="<%= pagination.basePath %>?page=<%= pagination.currentPage - 1 %><%= paginationSuffix %>"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <% for (let page = 1; page <= pagination.totalPages; page++) { %>
        <li class="page-item <%= page === pagination.currentPage ? "active" : "" %>">
          <a class="page-link" href="<%= pagination.basePath %>?page=<%= page %><%= paginationSuffix %>">
            <%= page %>
          </a>
        </li>
      <% } %>
      <li class="page-item <%= pagination.currentPage === pagination.totalPages ? "disabled" : "" %>">
        <a
          class="page-link"
          href="<%= pagination.basePath %>?page=<%= pagination.currentPage + 1 %>"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
<% } %>

<%- include("../partials/footer") %>
